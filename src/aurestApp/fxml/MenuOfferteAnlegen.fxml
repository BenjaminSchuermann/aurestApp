<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox xmlns:fx="http://javafx.com/fxml/1" VBox.vgrow="ALWAYS" xmlns="http://javafx.com/javafx/8.0.40">
    <children>
        <HBox>
            <children>
                <Label text="Offertennummer">
                    <HBox.margin>
                        <Insets/>
                    </HBox.margin>
                </Label>
                <HBox alignment="TOP_RIGHT" HBox.hgrow="ALWAYS">
                    <children>
                        <Label id="beispiellabel" alignment="CENTER_RIGHT" text="Beispiel : 11203" textAlignment="RIGHT"/>
                    </children>
                    <HBox.margin>
                        <Insets/>
                    </HBox.margin>
                </HBox>
            </children>
            <VBox.margin>
                <Insets top="20.0"/>
            </VBox.margin>
        </HBox>

        <TextField id="offertennummer" fx:id="offertennummer"/>
        <HBox>
            <children>
                <Label text="Kunde">
                    <HBox.margin>
                        <Insets/>
                    </HBox.margin>
                </Label>
                <HBox alignment="TOP_RIGHT" HBox.hgrow="ALWAYS">
                    <children>
                        <Label id="beispiellabel" alignment="CENTER_RIGHT" text="Beispiel : EFTEC">
                            <HBox.margin>
                                <Insets/>
                            </HBox.margin>
                        </Label>
                    </children>
                </HBox>
            </children>
            <VBox.margin>
                <Insets top="10.0"/>
            </VBox.margin>
        </HBox>
        <TextField id="offertenkunde" fx:id="offertenkunde">
            <VBox.margin>
                <Insets top="5.0"/>
            </VBox.margin>
        </TextField>
        <HBox>
            <children>
                <Label text="Beschreibung">
                    <HBox.margin>
                        <Insets/>
                    </HBox.margin>
                </Label>
                <HBox alignment="TOP_RIGHT" HBox.hgrow="ALWAYS">
                    <children>
                        <Label id="beispiellabel" alignment="CENTER_RIGHT" text="Beispiel : Umbau Reaktor 300">
                            <HBox.margin>
                                <Insets/>
                            </HBox.margin>
                        </Label>
                    </children>
                </HBox>
            </children>
            <VBox.margin>
                <Insets top="10.0"/>
            </VBox.margin>
        </HBox>
        <TextField id="offertenbeschreibung" fx:id="offertenbeschreibung">
            <VBox.margin>
                <Insets top="5.0"/>
            </VBox.margin>
        </TextField>
        <VBox alignment="BOTTOM_RIGHT" VBox.vgrow="ALWAYS">
            <VBox.margin>
                <Insets top="15.0"/>
            </VBox.margin>
            <children>
                <Button id="erstelleOfferte" fx:id="erstelleOfferte" mnemonicParsing="false" onAction="#handelErstelleOfferte" text="Offertenordner anlegen"/>
            </children>
        </VBox>
    </children>
    <padding>
        <Insets bottom="15.0" left="15.0" right="15.0"/>
    </padding>
</VBox>
